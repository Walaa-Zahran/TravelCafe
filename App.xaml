<Application x:Class="TravelCafe.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Load WinUI resources -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Your custom resources -->
            <Style x:Key="ChipButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#171822"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="CornerRadius" Value="999"/>
                <Setter Property="Padding" Value="16,6"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontSize" Value="13"/>
            </Style>

            <Style x:Key="AccentChipButtonStyle"
                   TargetType="Button"
                   BasedOn="{StaticResource ChipButtonStyle}">
                <Setter Property="Background" Value="#FFFBC531"/>
                <Setter Property="Foreground" Value="#1E1220"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
