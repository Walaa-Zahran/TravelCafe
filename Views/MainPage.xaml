<Page
    x:Class="TravelCafe.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravelCafe.App.Views"
    xmlns:models="using:TravelCafe.App.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer x:Name="RootScroll"
                  HorizontalScrollMode="Disabled"
                  HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollMode="Auto"
                  VerticalScrollBarVisibility="Auto">

        <!-- Centered content for nice look on large screens -->
        <Grid Background="#FFF9F9FB">
            <Grid HorizontalAlignment="Center"
                  MaxWidth="600"
                  Padding="16">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Header -->
                    <RowDefinition Height="Auto" />
                    <!-- Hero -->
                    <RowDefinition Height="Auto" />
                    <!-- AI Suggestion -->
                    <RowDefinition Height="Auto" />
                    <!-- Destinations -->
                    <RowDefinition Height="Auto" />
                    <!-- Categories -->
                    <RowDefinition Height="*" />
                    <!-- Drinks List -->
                </Grid.RowDefinitions>

                <!-- 1) Greeting + City label + Cart -->
                <StackPanel Grid.Row="0"
                            Margin="0,8,0,16">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Good evening, Walaa"
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Foreground="#222"/>

                            <TextBlock Text="{Binding CafeOfTheDay.City}"
                                       FontSize="14"
                                       Foreground="#777"
                                       d:Text="Exploring cafés in Tokyo"/>
                        </StackPanel>

                        <Border Background="#FF6E7F"
                                Padding="10,4"
                                HorizontalAlignment="Right"
                                Margin="16,0,0,0"
                               >
                            <TextBlock Foreground="White"
                                       FontSize="12"
                                       FontWeight="SemiBold">
                                <Run Text="Cart: " />
                                <Run Text="{Binding CartCount}" />
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <!-- Status text for adds -->
                    <TextBlock x:Name="StatusText"
                               Margin="0,8,0,0"
                               FontSize="12"
                               Foreground="#777"
                               Opacity="0"
                               d:Opacity="1"
                               d:Text="Added Matcha Nebula Latte to cart (1)" />
                </StackPanel>

                <!-- 2) Café of the Day Hero Card -->
                <Grid Grid.Row="1"
                      x:Name="CafeHero"
                      Height="220"
                      Margin="0,0,0,16">
                    <Border CornerRadius="28"
                            Background="Transparent">
                        <Grid>
                            <!-- Background Image -->
                            <Image Source="{Binding CafeOfTheDay.ImagePath}"
                                   Stretch="UniformToFill"
                                   Opacity="0.95"
                                   d:Source="/Assets/Images/sample_cafe.jpg" />

                            <!-- Gradient overlay -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="0,1">
                                        <GradientStop Color="#00000000"
                                                      Offset="0.0"/>
                                        <GradientStop Color="#AA000000"
                                                      Offset="0.7"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Text overlay -->
                            <StackPanel VerticalAlignment="Bottom"
                                        Margin="16"
                                        Spacing="4">
                                <TextBlock Text="Café of the Day"
                                           Foreground="#FFF9F9FB"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>

                                <TextBlock Text="{Binding CafeOfTheDay.Name}"
                                           Foreground="White"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           d:Text="Café Sakura"/>

                                <TextBlock Text="{Binding CafeOfTheDay.Tagline}"
                                           Foreground="#FFE6E6E6"
                                           FontSize="14"
                                           d:Text="Matcha &amp; espresso harmony"/>

                                <TextBlock Text="{Binding CafeOfTheDay.City}"
                                           Foreground="#FFD3D3D3"
                                           FontSize="12"
                                           d:Text="Tokyo, Japan"/>

                                <Button Content="View Menu"
                                        HorizontalAlignment="Left"
                                        Margin="0,12,0,4"
                                        Padding="16,8"
                                        Background="#FF6E7F"
                                        Foreground="White"
                                        Click="ViewMenu_Click"
                                        />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- 3) AI-style Suggestion -->
                <Border Grid.Row="2"
                        Background="#FFEFEFF5"
                        
                        Padding="12"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Spacing="4">
                            <TextBlock Text="Cosmic Suggestion"
                                       Foreground="#FF6E7F"
                                       FontSize="13"
                                       FontWeight="Bold" />
                            <TextBlock x:Name="SuggestionText"
                                       Text="Tap the button to get a drink suggestion ✨"
                                       Foreground="#222"
                                       FontSize="14"
                                       TextWrapping="WrapWholeWords" />
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="Surprise Me"
                                Click="SurpriseMe_Click"
                                Padding="12,6"
                                Margin="8,0,0,0"
                               
                                Background="#FF6E7F"
                                Foreground="White" />
                    </Grid>
                </Border>

                <!-- 4) Destination Carousel -->
                <StackPanel Grid.Row="3"
                            Margin="0,0,0,8">
                    <TextBlock Text="Discover cities"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#222"
                               Margin="0,0,0,8"/>

                    <ScrollViewer HorizontalScrollMode="Auto"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollMode="Disabled">
                        <ItemsControl ItemsSource="{Binding Destinations}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="12"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:CityDestination">
                                    <Grid Width="140"
                                          Height="170">
                                        <Border CornerRadius="20"
                                                Background="White">
                                            <Grid>
                                                <Image Source="{Binding ImagePath}"
                                                       Stretch="UniformToFill"
                                                       d:Source="/Assets/Images/sample_city.jpg" />

                                                <Rectangle>
                                                    <Rectangle.Fill>
                                                        <LinearGradientBrush StartPoint="0,0"
                                                                             EndPoint="0,1">
                                                            <GradientStop Color="#00000000"
                                                                          Offset="0.0"/>
                                                            <GradientStop Color="#AA000000"
                                                                          Offset="0.8"/>
                                                        </LinearGradientBrush>
                                                    </Rectangle.Fill>
                                                </Rectangle>

                                                <TextBlock Text="{Binding City}"
                                                           Foreground="White"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           VerticalAlignment="Bottom"
                                                           Margin="10,0,10,10"/>
                                            </Grid>
                                        </Border>

                                        <!-- Transparent overlay to handle taps -->
                                        <Button Background="Transparent"
                                                BorderThickness="0"
                                                Click="DestinationCard_Click" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>

                <!-- 5) Category Chips -->
                <StackPanel x:Name="ChipsPanel"
                            Grid.Row="4"
                            Orientation="Horizontal"
                            Spacing="8"
                            Margin="0,0,0,8">
                    <Button Content="All"
                            Tag="All"
                            Click="Category_Click"
                            Style="{StaticResource AccentChipButtonStyle}" />
                    <Button Content="Hot"
                            Tag="Hot"
                            Click="Category_Click"
                            Style="{StaticResource ChipButtonStyle}" />
                    <Button Content="Iced"
                            Tag="Iced"
                            Click="Category_Click"
                            Style="{StaticResource ChipButtonStyle}" />
                    <Button Content="Seasonal"
                            Tag="Seasonal"
                            Click="Category_Click"
                            Style="{StaticResource ChipButtonStyle}" />
                    <Button Content="Specials"
                            Tag="Specials"
                            Click="Category_Click"
                            Style="{StaticResource ChipButtonStyle}" />
                </StackPanel>

                <!-- 6) Drinks List -->
                <StackPanel Grid.Row="5">
                    <TextBlock Text="Signature drinks"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#222"
                               Margin="0,0,0,8"/>

                    <ListView x:Name="DrinksList"
                              ItemsSource="{Binding Drinks}"
                              IsItemClickEnabled="False"
                              SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Drink">
                                <Border Margin="0,0,0,12"
                                        Background="#171822"
                                        
                                        Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Spacing="4">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="White" />
                                            <TextBlock Text="{Binding Description}"
                                                       FontSize="13"
                                                       Foreground="#99FFFFFF"
                                                       TextWrapping="WrapWholeWords" />
                                            <TextBlock Text="{Binding Category}"
                                                       FontSize="12"
                                                       Foreground="#FFFBC531"
                                                       Margin="0,4,0,0" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Spacing="8">
                                            <!-- Simple currency display: $ + Price -->
                                            <TextBlock FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Right">
                                                <Run Text="$"/>
                                                <Run Text="{Binding Price}"/>
                                            </TextBlock>

                                            <Button Content="Add"
                                                    Padding="12,6"
                                                   
                                                    Background="#FFFBC531"
                                                    Foreground="#FF1E1220"
                                                    Click="AddDrinkButton_Click" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
